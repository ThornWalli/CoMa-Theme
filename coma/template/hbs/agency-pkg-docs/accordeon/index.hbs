---
parent-id: ''
list:
  'Entry 1': '#entry-1'
  'Entry 2': '#entry-2'
  'Entry 3':
    'Entry 1.1': '#entry-1-1'
    'Entry 1.2': '#entry-1-2'
    'Entry 1.3': '#entry-1-3'
  'Entry 4':
    'Entry 4.1': '#entry-4-1'
    'Entry 4.2': '#entry-4-2'
    'Entry 4.3':
      'Entry 4.3.1': '#entry-4-3-1'
      'Entry 4.3.2': '#entry-4-3-2'
      'Entry 4.3.3': '#entry-4-3-3'
---
<ul class="pkg" data-pkg="agency-pkg-docs/accordeon">
  {{#each list}}
    <li>
      {{#if (isString this)}}
        {{{mixin "agency-pkg-docs/accordeon/menu" url=this title=@key}}}
        {{{mixin "agency-pkg-docs/accordeon/external" url=this}}}
      {{else}}
        <input type="checkbox" id="{{{../parent-id}}} - {{{@key}}}"/>
        {{{mixin "agency-pkg-docs/accordeon/label" id=@key parent-id=../parent-id}}}
        {{{mixin "agency-pkg-docs/accordeon" list=this parent-id=@key}}}
      {{/if}}
    </li>
  {{/each}}
</ul>
